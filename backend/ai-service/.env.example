# ============================================
# AI SERVICE ENVIRONMENT VARIABLES
# Copy to .env for local development
# ============================================

# Application Settings
APP_NAME="SMD AI Service"
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# ============================================
# RABBITMQ CONFIGURATION (CRITICAL)
# ============================================
# Khi chạy local (bên ngoài Docker)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Khi chạy trong Docker (docker-compose)
# RABBITMQ_HOST=rabbitmq
# RABBITMQ_PORT=5672

# Queue Names (đồng bộ với infrastructure/rabbitmq/definitions.json)
QUEUE_AI_PROCESSING=ai_processing_queue
QUEUE_AI_SUMMARIZE=ai_summarize_queue
QUEUE_AI_RESULT=ai_result_queue

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smd_database
DB_USER=smd_user
DB_PASSWORD=smd_password

# ============================================
# REDIS CACHE
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================
# AI MODEL CONFIGURATION
# ============================================
# Set to false to enable Real AI Model
# Set to true for Mock Mode (faster, no model loading)
MOCK_MODE=false

# Model name for SUMMARIZE function
# VietAI/vit5-base (~892MB) - smaller, faster
# vinai/phogpt-4b-v1-instruct (~8GB) - larger, better quality
AI_MODEL_NAME=VietAI/vit5-base
AI_MODEL_DEVICE=cpu
AI_MODEL_MAX_LENGTH=512

# Embedding model for semantic search (future use)
EMBEDDING_MODEL=bkai-foundation-models/vietnamese-bi-encoder

# ============================================
# WORKER CONFIGURATION
# ============================================
WORKER_PROCESSING_TIMEOUT=300
WORKER_MAX_RETRIES=3
WORKER_RETRY_DELAY=5

# Mock Mode Settings (set MOCK_MODE=true to use these)
MOCK_PROCESSING_DELAY=2
