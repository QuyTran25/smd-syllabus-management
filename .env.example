# ============================================
# ENVIRONMENT
# ============================================
ENVIRONMENT=development
# Options: development, staging, production

# ============================================
# DATABASE (PostgreSQL)
# ============================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=smd_database
POSTGRES_USER=smd_user
POSTGRES_PASSWORD=change_me_in_production

# Database URLs (Auto-generated, no need to change)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ============================================
# REDIS
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
# Leave empty for no password in development

# ============================================
# RABBITMQ
# ============================================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Queue Names
RABBITMQ_QUEUE_AI_PROCESSING=ai_processing_queue
RABBITMQ_QUEUE_AI_RESULT=ai_result_queue
RABBITMQ_QUEUE_NOTIFICATION=notification_queue

# ============================================
# KAFKA
# ============================================
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181

# Topics
KAFKA_TOPIC_AUDIT_LOG=system_audit_logs
KAFKA_TOPIC_USER_ACTIVITY=user_activity_logs

# ============================================
# JWT (JSON Web Token)
# ============================================
JWT_SECRET=your_super_secret_key_change_this_in_production_min_32_chars
JWT_EXPIRATION=86400000
# JWT expiration time in milliseconds (86400000 = 24 hours)
JWT_REFRESH_EXPIRATION=604800000
# Refresh token expiration (604800000 = 7 days)

# ============================================
# FIREBASE (FCM - Push Notification)
# ============================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_SERVICE_ACCOUNT_KEY=./backend/core-service/src/main/resources/firebase-service-account.json
# Download from Firebase Console > Project Settings > Service Accounts

# ============================================
# AI SERVICE
# ============================================
# Option 1: Use OpenAI API
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4-turbo-preview
# Options: gpt-3.5-turbo, gpt-4, gpt-4-turbo-preview

# Option 2: Use Ollama (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
# Options: llama2, mistral, codellama, etc.

# AI Service Settings
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
AI_TIMEOUT=60
# Timeout in seconds

# ============================================
# SERVICE PORTS
# ============================================
FRONTEND_PORT=3000
GATEWAY_PORT=8080
CORE_SERVICE_PORT=8081
AI_SERVICE_PORT=8082

# ============================================
# CORS Settings
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
# Comma-separated list of allowed origins

# ============================================
# EMAIL (Optional - for notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@smd-system.edu.vn

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARN, ERROR

# ============================================
# FILE UPLOAD
# ============================================
MAX_FILE_SIZE=10485760
# Max file upload size in bytes (10485760 = 10MB)
ALLOWED_FILE_EXTENSIONS=.pdf,.docx,.doc
UPLOAD_DIR=./uploads

# ============================================
# RATE LIMITING (API Gateway)
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Auto-reload settings
HOT_RELOAD=true
DEBUG_MODE=true

# Seeding
SEED_DATABASE=false
SEED_ADMIN_EMAIL=admin@smd.edu.vn
SEED_ADMIN_PASSWORD=Admin@123456

# ============================================
# MONITORING (Optional)
# ============================================
ENABLE_ACTUATOR=true
ENABLE_SWAGGER=true
ENABLE_PROMETHEUS=false
